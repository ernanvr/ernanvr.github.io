---
import { LOGO_IMAGE, SITE } from "@config";
import LanguageSwitcher from "@components/LanguageSwitcher.astro";
import { useTranslations } from "@i18n/ui";
import { getLocaleFromPath, getLocalizedPath } from "@i18n/utils";
import Hr from "./Hr.astro";
import LinkButton from "./LinkButton.astro";

export interface Props {
  activeNav?: "posts" | "archives" | "tags" | "about" | "search" | "now";
}

const { activeNav } = Astro.props;
const locale = getLocaleFromPath(Astro.url.pathname);
const t = useTranslations(locale);
---

<header>
  <a id="skip-to-content" href="#main-content">{t("nav.skipToContent")}</a>
  <div class="nav-container">
    <div class="top-nav-wrap paper-surface">
      <a href={getLocalizedPath(locale, "home")} class="logo whitespace-nowrap">
        {
          LOGO_IMAGE.enable ? (
            <img
              src={`/assets/${LOGO_IMAGE.svg ? "logo.svg" : "logo.png"}`}
              alt={SITE.title}
              width={LOGO_IMAGE.width}
              height={LOGO_IMAGE.height}
            />
          ) : (
            SITE.title
          )
        }
      </a>
      <nav id="nav-menu">
        <button
          class="hamburger-menu focus-outline"
          aria-label={t("nav.openMenu")}
          aria-expanded="false"
          aria-controls="menu-items"
          data-open-label={t("nav.openMenu")}
          data-close-label={t("nav.closeMenu")}
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="menu-icon"
          >
            <line x1="7" y1="12" x2="21" y2="12" class="line"></line>
            <line x1="3" y1="6" x2="21" y2="6" class="line"></line>
            <line x1="12" y1="18" x2="21" y2="18" class="line"></line>
            <line x1="18" y1="6" x2="6" y2="18" class="close"></line>
            <line x1="6" y1="6" x2="18" y2="18" class="close"></line>
          </svg>
        </button>
        <ul id="menu-items" class="display-none sm:flex">
          <li>
            <a
              href={getLocalizedPath(locale, "posts")}
              class={activeNav === "posts" ? "active" : ""}
            >
              {t("nav.posts")}
            </a>
          </li>
          <li>
            <a
              href={getLocalizedPath(locale, "tags")}
              class={activeNav === "tags" ? "active" : ""}
            >
              {t("nav.tags")}
            </a>
          </li>
          <li>
            <a
              href={getLocalizedPath(locale, "about")}
              class={activeNav === "about" ? "active" : ""}
            >
              {t("nav.about")}
            </a>
          </li>
          <li>
            <a
              href={getLocalizedPath(locale, "now")}
              class={activeNav === "now" ? "active" : ""}
            >
              {t("nav.now")}
            </a>
          </li>
          {
            SITE.showArchives && (
              <li>
                <LinkButton
                  href={getLocalizedPath(locale, "archives")}
                  className={`focus-outline flex w-full items-center justify-center rounded-md border border-transparent px-4 py-2 text-center text-sm font-medium sm:w-auto sm:px-2 sm:py-1 ${
                    activeNav === "archives" ? "active" : ""
                  }`}
                  ariaLabel={t("nav.archives")}
                  title={t("nav.archives")}
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class:list={[
                      "icon icon-tabler icons-tabler-outline !hidden sm:!inline-block",
                      activeNav === "archives" && "!stroke-skin-accent",
                    ]}
                  >
                    <>
                      <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                      <path d="M3 4m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v0a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z" />
                      <path d="M5 8v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-10" />
                      <path d="M10 12l4 0" />
                    </>
                  </svg>
                  <span class="sm:sr-only">{t("nav.archives")}</span>
                </LinkButton>
              </li>
            )
          }
          <li class="utility-row">
            <div class="utility-actions">
              <LinkButton
                href={getLocalizedPath(locale, "search")}
                className={`utility-control focus-outline ${
                  activeNav === "search" ? "active" : ""
                }`}
                ariaLabel={t("nav.search")}
                title={t("nav.search")}
              >
                <svg xmlns="http://www.w3.org/2000/svg"
                  ><path
                    d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z"
                  ></path>
                </svg>
                <span class="sr-only">{t("nav.search")}</span>
              </LinkButton>
              <LanguageSwitcher ariaLabel={t("nav.language")} />
              {
                SITE.lightAndDarkMode && (
                  <button
                    id="theme-btn"
                    class="focus-outline utility-control"
                    title={t("nav.themeToggle")}
                    aria-label="auto"
                    aria-live="polite"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" id="moon-svg">
                      <path d="M20.742 13.045a8.088 8.088 0 0 1-2.077.271c-2.135 0-4.14-.83-5.646-2.336a8.025 8.025 0 0 1-2.064-7.723A1 1 0 0 0 9.73 2.034a10.014 10.014 0 0 0-4.489 2.582c-3.898 3.898-3.898 10.243 0 14.143a9.937 9.937 0 0 0 7.072 2.93 9.93 9.93 0 0 0 7.07-2.929 10.007 10.007 0 0 0 2.583-4.491 1.001 1.001 0 0 0-1.224-1.224zm-2.772 4.301a7.947 7.947 0 0 1-5.656 2.343 7.953 7.953 0 0 1-5.658-2.344c-3.118-3.119-3.118-8.195 0-11.314a7.923 7.923 0 0 1 2.06-1.483 10.027 10.027 0 0 0 2.89 7.848 9.972 9.972 0 0 0 7.848 2.891 8.036 8.036 0 0 1-1.484 2.059z" />
                    </svg>
                    <svg xmlns="http://www.w3.org/2000/svg" id="sun-svg">
                      <path d="M6.993 12c0 2.761 2.246 5.007 5.007 5.007s5.007-2.246 5.007-5.007S14.761 6.993 12 6.993 6.993 9.239 6.993 12zM12 8.993c1.658 0 3.007 1.349 3.007 3.007S13.658 15.007 12 15.007 8.993 13.658 8.993 12 10.342 8.993 12 8.993zM10.998 19h2v3h-2zm0-17h2v3h-2zm-9 9h3v2h-3zm17 0h3v2h-3zM4.219 18.363l2.12-2.122 1.415 1.414-2.12 2.122zM16.24 6.344l2.122-2.122 1.414 1.414-2.122 2.122zM6.342 7.759 4.22 5.637l1.415-1.414 2.12 2.122zm13.434 10.605-1.414 1.414-2.122-2.122 1.414-1.414z" />
                    </svg>
                  </button>
                )
              }
            </div>
          </li>
        </ul>
      </nav>
    </div>
  </div>
  <Hr />
</header>

<style>
  #skip-to-content {
    @apply absolute -top-full left-8 z-50 rounded-md bg-skin-accent px-3 py-2 font-mono text-sm text-skin-inverted transition-all focus:top-4;
  }
  .nav-container {
    @apply mx-auto flex max-w-4xl flex-col items-center justify-between px-4 pt-6 sm:flex-row sm:pt-8;
  }
  .top-nav-wrap {
    @apply relative flex w-full items-start justify-between px-4 py-3 sm:items-center sm:px-5;
  }
  .logo {
    @apply py-1 text-xl font-semibold tracking-tight sm:text-2xl;
  }
  .hamburger-menu {
    @apply self-end rounded-md p-2 hover:bg-skin-card/70 sm:hidden;
  }
  .hamburger-menu svg {
    @apply h-6 w-6 scale-125 fill-skin-base;
  }

  nav {
    @apply ml-auto flex w-auto flex-col items-end sm:ml-4 sm:w-auto sm:flex-row sm:justify-end sm:py-0;
  }
  nav ul {
    @apply absolute left-0 right-0 top-full z-30 mt-3 flex w-auto flex-col gap-1 rounded-md border border-skin-line/70 bg-skin-card p-2 shadow-card sm:static sm:left-auto sm:right-auto sm:top-auto sm:z-auto sm:ml-0 sm:mt-0 sm:w-auto sm:max-w-none sm:flex-row sm:flex-nowrap sm:items-center sm:justify-end sm:gap-x-1 sm:gap-y-0 sm:border-0 sm:bg-transparent sm:p-0 sm:shadow-none;
  }

  #menu-items {
    @apply sm:mt-0;
  }

  #menu-items.is-open {
    animation: menu-fade-in 150ms ease-out;
  }

  @keyframes menu-fade-in {
    from {
      opacity: 0;
      transform: translateY(-4px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    #menu-items.is-open {
      animation: none;
    }
  }

  @media (min-width: 640px) {
    #menu-items {
      animation: none;
    }
  }

  nav ul li {
    @apply flex w-full items-center justify-center sm:w-auto;
  }
  nav ul li > a {
    @apply flex min-h-11 w-full items-center justify-center whitespace-nowrap rounded-md border border-transparent px-4 py-2 text-center text-sm font-medium hover:border-skin-line/80 hover:bg-skin-card/65 hover:text-skin-accent sm:min-h-0 sm:w-auto sm:px-2 sm:py-1;
  }
  nav .active {
    @apply border-skin-line bg-skin-card text-skin-accent no-underline;
  }
  nav a.active svg {
    @apply fill-skin-accent;
  }

  .utility-row {
    @apply mt-2 w-full border-t border-skin-line/40 pt-3 sm:mt-0 sm:w-auto sm:border-0 sm:pt-0;
  }

  .utility-actions {
    @apply flex w-full items-center justify-center gap-3 sm:w-auto sm:gap-1;
  }

  .utility-control {
    @apply flex h-11 w-11 items-center justify-center rounded-md border border-transparent p-0 hover:border-skin-line/80 hover:bg-skin-card/65 hover:text-skin-accent sm:h-8 sm:w-8;
  }

  .utility-control.active {
    @apply border-skin-line bg-skin-card text-skin-accent no-underline;
  }

  .utility-control svg {
    @apply scale-125 sm:scale-100;
  }

  nav button {
    @apply rounded-md hover:bg-skin-card/70;
  }
  nav button svg {
    @apply h-6 w-6 fill-skin-base hover:fill-skin-accent;
  }
  #theme-btn svg {
    @apply hover:rotate-12;
  }

  .menu-icon line {
    @apply transition-opacity duration-75 ease-in-out;
  }
  .menu-icon .close {
    opacity: 0;
  }
  .menu-icon.is-active .line {
    @apply opacity-0;
  }
  .menu-icon.is-active .close {
    @apply opacity-100;
  }
</style>

<script>
  function toggleNav() {
    // Toggle menu
    const menuBtn = document.querySelector(".hamburger-menu");
    const menuIcon = document.querySelector(".menu-icon");
    const menuItems = document.querySelector("#menu-items");

    if (
      !menuBtn ||
      !menuItems ||
      menuBtn.getAttribute("data-nav-listener-bound") === "true"
    ) {
      return;
    }

    menuBtn.setAttribute("data-nav-listener-bound", "true");

    menuBtn.addEventListener("click", () => {
      const menuExpanded = menuBtn.getAttribute("aria-expanded") === "true";
      const openLabel = menuBtn.getAttribute("data-open-label") || "Open Menu";
      const closeLabel =
        menuBtn.getAttribute("data-close-label") || "Close Menu";
      if (menuExpanded) {
        menuIcon?.classList.remove("is-active");
        menuBtn.setAttribute("aria-expanded", "false");
        menuBtn.setAttribute("aria-label", openLabel);
        menuItems?.classList.remove("is-open");
        menuItems?.classList.add("display-none");
      } else {
        menuItems?.classList.remove("display-none");
        menuItems?.classList.remove("is-open");
        requestAnimationFrame(() => {
          menuItems?.classList.add("is-open");
        });
        menuIcon?.classList.add("is-active");
        menuBtn.setAttribute("aria-expanded", "true");
        menuBtn.setAttribute("aria-label", closeLabel);
      }
    });
  }

  toggleNav();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", toggleNav);
</script>
