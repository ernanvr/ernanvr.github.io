---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";
import Card from "@components/Card";
import Socials from "@components/Socials.astro";
import getSortedPosts from "@utils/getSortedPosts";
import { useTranslations } from "@i18n/ui";
import { getLocalizedPath } from "@i18n/utils";
import { SITE, SOCIALS } from "@config";

const locale = "en";
const t = useTranslations(locale);

const posts = await getCollection("blog", ({ data }) => data.lang === locale);

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
const hasFeaturedPosts = featuredPosts.length > 0;
const hasRecentPosts = recentPosts.length > 0;
const featuredOnly = hasFeaturedPosts && !hasRecentPosts;

const socialCount = SOCIALS.filter(social => social.active).length;
---

<Layout>
  <Header />
  <main id="main-content">
    <section id="hero" class="paper-surface">
      <h1>Hi, I&apos;m Ern√°n.</h1>
      <a
        target="_blank"
        href={getLocalizedPath(locale, "rss")}
        class="rss-link"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="rss-icon"
          ><path
            d="M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z"
          ></path><path
            d="M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z"
          ></path><circle cx="6" cy="18" r="2"></circle>
        </svg>
        <span class="sr-only">RSS Feed</span>
      </a>

      <p>
        I&apos;m an entrepreneur from El Salvador focused on AI and long-term
        impact. I&apos;m in the early stages of building Santa Clarita Digital
        Labs while working full-time, and this blog is where I share the ideas
        that guide how I think and build.
      </p>
      <p>
        Here you&apos;ll find content about applied AI, business strategy,
        philosophy and purpose, and my optimistic predictions for a glorious
        future for El Salvador as a technology power.
      </p>
      <p>
        My goal is simple: connect with people around the world who want to
        create things with real impact.
      </p>
      {
        socialCount > 0 && (
          <div class="social-wrapper">
            <div class="social-links">{t("home.socialLinks")}</div>
            <Socials />
          </div>
        )
      }
    </section>

    <Hr />

    {
      hasFeaturedPosts && (
        <>
          <section id="featured" class:list={[featuredOnly && "featured-only"]}>
            <h2>{t("home.featured")}</h2>
            <ul class="space-y-1">
              {featuredPosts.map(({ data, slug }) => (
                <Card
                  href={`${getLocalizedPath(locale, "posts")}${slug}/`}
                  frontmatter={data}
                  locale={locale}
                  secHeading={false}
                />
              ))}
            </ul>
          </section>
          {hasRecentPosts && <Hr />}
        </>
      )
    }

    {
      hasRecentPosts && (
        <section id="recent-posts">
          <h2>{t("home.recentPosts")}</h2>
          <ul class="space-y-1">
            {recentPosts.map(
              ({ data, slug }, index) =>
                index < SITE.postPerIndex && (
                  <Card
                    href={`${getLocalizedPath(locale, "posts")}${slug}/`}
                    frontmatter={data}
                    locale={locale}
                    secHeading={false}
                  />
                )
            )}
          </ul>
        </section>
      )
    }

    <div
      class:list={[
        "all-posts-btn-wrapper",
        featuredOnly && "all-posts-btn-wrapper-compact",
      ]}
    >
      <LinkButton href={getLocalizedPath(locale, "posts")}>
        {t("home.allPosts")}
        <svg xmlns="http://www.w3.org/2000/svg"
          ><path
            d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
          ></path>
        </svg>
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  /* ===== Hero Section ===== */

  #main-content {
    @apply mx-auto w-full max-w-3xl px-4 pb-10;
  }

  #hero {
    @apply mb-8 mt-8 px-5 pb-8 pt-7 sm:px-7;
  }
  #hero h1 {
    @apply my-4 inline-block text-4xl font-bold tracking-tight sm:my-6 sm:text-5xl;
  }
  #hero .rss-link {
    @apply inline-flex rounded-md border border-skin-line/70 bg-skin-card/60 p-2;
  }
  #hero .rss-icon {
    @apply h-6 w-6 scale-110 fill-skin-accent sm:scale-125;
  }
  #hero p {
    @apply my-3 text-[1.02rem] leading-7;
  }
  .social-wrapper {
    @apply mt-6 flex flex-col rounded-md border border-skin-line/70 bg-skin-card/55 px-3 py-3 sm:flex-row sm:items-center;
  }
  .social-links {
    @apply mb-2 mr-2 whitespace-nowrap font-mono text-sm sm:mb-0;
  }

  /* ===== Featured & Recent Posts Sections ===== */
  #featured,
  #recent-posts {
    @apply pb-6 pt-8;
  }
  #featured.featured-only {
    @apply pb-2;
  }
  #featured.featured-only li {
    @apply my-4;
  }
  #featured h2,
  #recent-posts h2 {
    @apply mb-5 text-2xl font-semibold tracking-tight;
  }
  .all-posts-btn-wrapper {
    @apply mb-8 mt-6 text-center sm:my-10;
  }
  .all-posts-btn-wrapper-compact {
    @apply mb-6 mt-4 sm:mb-8 sm:mt-6;
  }
  .all-posts-btn-wrapper a {
    @apply inline-flex items-center gap-1 rounded-lg border border-skin-line/70 bg-paper px-4 py-2 font-mono text-sm shadow-card transition-all duration-200 hover:-translate-y-0.5 hover:border-skin-line hover:shadow-card-hover;
  }
</style>
